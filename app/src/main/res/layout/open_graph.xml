<?xml version="1.0" encoding="utf-8"?>
<net.yusukezzz.ssmtc.ui.misc.OpenGraphLayout android:id="@+id/open_graph"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/open_graph_size"
    android:background="@drawable/border_frame"
    >

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar"
        android:id="@+id/og_loading"
        android:indeterminateTint="@color/grey"
        android:layout_width="@dimen/open_graph_size"
        android:layout_height="@dimen/open_graph_size"
        android:layout_gravity="center_horizontal"
        />

    <RelativeLayout
        android:id="@+id/og_contents"
        android:layout_width="match_parent"
        android:layout_height="@dimen/open_graph_size"
        android:background="?selectableItemBackground"
        >

        <ImageView
            android:id="@+id/og_image"
            android:layout_width="@dimen/open_graph_size"
            android:layout_height="@dimen/open_graph_size"
            android:background="@color/dark_grey"
            />

        <TextView
            android:id="@+id/og_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/open_graph_margin"
            android:layout_marginStart="@dimen/open_graph_margin"
            android:layout_marginTop="@dimen/open_graph_margin"
            android:layout_toEndOf="@id/og_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/textWhite"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/og_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/textWhite"
            android:textSize="12sp"
            android:layout_marginBottom="@dimen/open_graph_margin"
            android:layout_marginEnd="@dimen/open_graph_margin"
            android:layout_marginStart="@dimen/open_graph_margin"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/og_image"
            />

    </RelativeLayout>

</net.yusukezzz.ssmtc.ui.misc.OpenGraphLayout>
