<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/open_graph"
    android:background="?selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/og_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_image_placeholder" />

    <TextView
        android:id="@+id/og_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/og_image"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/og_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/og_image"
        android:layout_alignParentBottom="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/og_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/og_image"
        android:layout_below="@id/og_title"
        android:layout_above="@id/og_host"
        android:maxLines="2"
        android:textSize="12sp" />

</RelativeLayout>
